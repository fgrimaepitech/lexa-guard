{
  "name": "lexa-guard",
  "version": "0.1.6",
  "description": "Lexa Guard - Pour lutter contre la fraude aux projets de franÃ§ais",
  "author": {
    "name": "Lexa Guard Team",
    "email": "florian.grima@epitech.eu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fgrimaepitech/lexa-guard.git"
  },
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.6.2",
    "jszip": "^3.10.1",
    "pdfjs-dist": "^5.4.296",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "tailwindcss -i ./src/input.css -o ./src/tailwind.css --watch & react-scripts start",
    "build": "tailwindcss -i ./src/input.css -o ./src/tailwind.css && react-scripts build",
    "build:react": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tailwind:build": "tailwindcss -i ./src/input.css -o ./src/tailwind.css",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./src/tailwind.css --watch",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build:react && electron-builder",
    "electron-pack-mac": "npm run build:react && electron-builder --mac",
    "electron-pack-win": "npm run build:react && electron-builder --win",
    "electron-pack-linux": "npm run build:react && electron-builder --linux",
    "electron-pack-all": "npm run build:react && electron-builder --mac --win --linux",
    "preelectron-pack": "npm run build",
    "publish:mac": "npm run build:react && electron-builder --mac --publish always",
    "publish:win": "npm run build:react && electron-builder --win --publish always",
    "publish:linux": "npm run build:react && electron-builder --linux --publish always",
    "publish:all": "npm run build:react && electron-builder --mac --win --linux --publish always",
    "publish:draft": "npm run build:react && electron-builder --publish never"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^25.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "wait-on": "^7.2.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.lexaguard.app",
    "productName": "Lexa Guard",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/favicon.ico",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/favicon.ico"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    },
    "publish": {
      "provider": "github",
      "owner": "fgrimaepitech",
      "repo": "lexa-guard",
      "releaseType": "release"
    }
  }
}
